<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css">

</head>

<body>
    <%- include('../partials/_navbar.ejs')%>

        <div class="persons-grid">
            <div class="persons-section">
                <h2>Tutors</h2>
                <% Person.filter(p=> p.occupation === 'Tutor').forEach(p => { %>
                    <a href="/users/<%=user._id%>/persons/<%=p._id%>" class="person-link">
                        <%=p.firstName%>
                            <%=p.lastName%>
                    </a>
                    <% }) %>
            </div>

            <div class="persons-section">
                <h2>Students</h2>
                <% Person.filter(p=> p.occupation === 'Student').forEach(p => { %>
                    <a href="/users/<%=user._id%>/persons/<%=p._id%>" class="person-link">
                        <%=p.firstName%>
                            <%=p.lastName%>
                    </a>
                    <% }) %>
            </div>
        </div>
        <form action="/users/<%= user._id %>/persons/newPerson">
            <button type="submit" class="add-person-btn">Add Person</button>
        </form>
        <form action="/users/<%=user._id%>/persons/reactivatePerson">
            <button type="submit" class="add-person-btn">Reactivate a deactive user</button>
        </form>
</body>

</html>