<!-- views/enrollment.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>

<body>
    <%- include('../partials/_navbar.ejs')%>
    <h1>Enrollment</h1>
    <table>
        <tr>
          <th>Student Name</th>
          <th>Tutor Name</th>
          <th>Course</th>
          <th>Start Date</th>
          <th>grade</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      
        <% enrollments.forEach((enrollment)=>{%>
        <tr>
            <td><a href="/users/<%=user._id%>/persons/<%=enrollment.student._id%>"><%=enrollment.student.firstName%> <%=enrollment.student.lastName%></a></td>
            <td><%=enrollment.tutor.firstName%> <%=enrollment.tutor.lastName%></td>
            <td><%=enrollment.course.name%></td>
            <td><%=enrollment.startDate.toLocaleDateString('en-GB')%></td>
            <td><%=enrollment.grade%></td>
            <td><a href="/users/<%=user._id%>/enrollments/<%=enrollment._id%>/edit">Edit</a></td>
            <td><form action="/users/<%=user._id%>/enrollments/<%=enrollment._id%>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
            </form></td>
        </tr>
        <%})%>
    </table>

    <a href="/users/<%=user._id%>/enrollments/new">Add new new enrollment</a>
</body>

</html>